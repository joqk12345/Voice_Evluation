/* pages/profile/profile.wxss - 专业音频分析风格 */

.profile-container {
  padding: 24rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

/* 专业用户卡片 */
.user-card {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  margin-bottom: 32rpx;
  border: 1rpx solid var(--primary-dark);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.avatar-emoji {
  font-size: 60rpx;
  color: white;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  letter-spacing: -0.25rpx;
}

.user-level {
  display: block;
  font-size: 22rpx;
  opacity: 0.9;
  font-weight: 400;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.stat-label {
  display: block;
  font-size: 20rpx;
  opacity: 0.8;
  font-weight: 400;
}

/* 专业功能菜单 */
.menu-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.menu-list {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--neutral-50);
  transform: scale(0.98);
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--neutral-100);
  border-radius: var(--border-radius);
  margin-right: 20rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 22rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

.menu-arrow {
  font-size: 24rpx;
  color: var(--text-quaternary);
  margin-left: 16rpx;
}

.menu-badge {
  background: var(--accent-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius);
  font-size: 20rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

/* 专业设置区域 */
.settings-section {
  margin-bottom: 32rpx;
}

.settings-list {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow);
  overflow: hidden;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: var(--neutral-50);
}

.setting-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.setting-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--neutral-100);
  border-radius: var(--border-radius);
  margin-right: 20rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.setting-info {
  flex: 1;
}

.setting-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.setting-desc {
  font-size: 22rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

.setting-right {
  display: flex;
  align-items: center;
}

.setting-value {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-right: 16rpx;
}

.setting-switch {
  width: 80rpx;
  height: 40rpx;
  background: var(--neutral-300);
  border-radius: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.setting-switch.active {
  background: var(--accent-color);
}

.setting-switch::after {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 32rpx;
  height: 32rpx;
  background: white;
  border-radius: 50%;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.setting-switch.active::after {
  transform: translateX(40rpx);
}

.setting-arrow {
  font-size: 24rpx;
  color: var(--text-quaternary);
}

/* 专业数据统计 */
.stats-section {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  text-align: center;
  transition: all 0.2s ease;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow);
}

.stat-card-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  color: var(--accent-color);
}

.stat-card-number {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.stat-card-label {
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 专业成就系统 */
.achievements-section {
  margin-bottom: 32rpx;
}

.achievements-list {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding: 8rpx 0;
}

.achievement-item {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 20rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  text-align: center;
  min-width: 120rpx;
  transition: all 0.2s ease;
}

.achievement-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow);
}

.achievement-item.unlocked {
  border-color: var(--accent-color);
  background: linear-gradient(135deg, var(--bg-primary), rgba(16, 185, 129, 0.05));
}

.achievement-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  color: var(--text-quaternary);
}

.achievement-item.unlocked .achievement-icon {
  color: var(--accent-color);
}

.achievement-title {
  font-size: 20rpx;
  color: var(--text-secondary);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.achievement-item.unlocked .achievement-title {
  color: var(--text-primary);
}

.achievement-desc {
  font-size: 18rpx;
  color: var(--text-quaternary);
  line-height: 1.3;
}

.achievement-item.unlocked .achievement-desc {
  color: var(--text-tertiary);
}

/* 专业版本信息 */
.version-info {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  text-align: center;
  margin-bottom: 32rpx;
}

.version-text {
  font-size: 22rpx;
  color: var(--text-tertiary);
  margin-bottom: 8rpx;
}

.version-number {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 专业退出按钮 */
.logout-section {
  margin-bottom: 32rpx;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: var(--error);
  color: white;
  border: none;
  border-radius: var(--border-radius-md);
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-sm);
}

.logout-btn:active {
  background: #dc2626;
  transform: scale(0.98);
  box-shadow: var(--shadow);
}

.logout-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .profile-container {
    padding: 16rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .avatar-emoji {
    font-size: 50rpx;
  }
  
  .user-name {
    font-size: 28rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
}