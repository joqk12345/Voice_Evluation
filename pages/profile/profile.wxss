/* pages/profile/profile.wxss - 温暖简洁，情绪化设计 */

.profile-container {
  padding: 40rpx 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding-bottom: 120rpx;
}

/* 用户信息卡片 - 温暖设计 */
.user-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar-wrapper {
  margin-right: 24rpx;
  position: relative;
}

.avatar-button {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
}

.avatar-button::after {
  border: none;
  padding: 0;
  margin: 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
  position: relative;
  overflow: hidden;
}

.avatar-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 60rpx;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: rgba(255, 154, 86, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
  pointer-events: none; /* 不拦截点击事件 */
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.nickname-input {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
  flex: 1;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background: transparent;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  min-width: 0;
}

.nickname-input:focus {
  border-color: #ff9a56;
  background: #fff5e6;
  outline: none;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.user-tag {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e5e7eb;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff9a56;
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-group {
  background: white;
  border-radius: 24rpx;
  padding: 8rpx 0;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  transition: all 0.2s ease;
  position: relative;
}

.menu-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 32rpx;
  height: 1rpx;
  background: #f3f4f6;
}

.menu-item:last-child::after {
  display: none;
}

.menu-item:active {
  background: #fef7ed;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-icon {
  font-size: 36rpx;
  line-height: 1;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  line-height: 1.4;
}

.menu-desc {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 28rpx;
  color: #d1d5db;
  margin-left: 16rpx;
}

/* 成就展示 */
.achievements-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-more {
  font-size: 24rpx;
  color: #ff9a56;
  font-weight: 400;
}

.achievements-list {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.achievement-item {
  min-width: 140rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.15);
  transition: all 0.2s ease;
}

.achievement-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.25);
}

.achievement-icon {
  font-size: 40rpx;
  line-height: 1;
}

.achievement-name {
  font-size: 22rpx;
  color: #1f2937;
  font-weight: 500;
  text-align: center;
  line-height: 1.3;
}

/* 客服联系 */
.customer-service-section {
  margin-bottom: 32rpx;
}

.service-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.service-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 20rpx;
}

.service-icon {
  font-size: 48rpx;
  line-height: 1;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.service-desc {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.service-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.wechat-info {
  padding: 20rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.wechat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.wechat-number {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.service-actions {
  display: flex;
  gap: 16rpx;
}

.service-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.service-btn::after {
  border: none;
}

.copy-btn {
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
}

.copy-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

.add-btn {
  background: linear-gradient(135deg, #07c160 0%, #00d4aa 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

.service-btn .btn-icon {
  font-size: 28rpx;
  line-height: 1;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border: 2rpx solid #fee2e2;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #dc2626;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(220, 38, 38, 0.1);
  transition: all 0.2s ease;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #fef2f2;
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(220, 38, 38, 0.15);
}

.logout-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .profile-container {
    padding: 32rpx 20rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .avatar-emoji {
    font-size: 50rpx;
  }
  
  .user-name {
    font-size: 28rpx;
  }
  
  .menu-icon-wrapper {
    width: 72rpx;
    height: 72rpx;
  }
  
  .menu-icon {
    font-size: 32rpx;
  }
}
