/* pages/history/history.wxss - 专业音频分析风格 */

.history-container {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 50%, #cbd5e1 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰元素 */
.history-container::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -20%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(30, 58, 138, 0.03) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

.history-container::after {
  content: '';
  position: absolute;
  bottom: -40%;
  left: -30%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(16, 185, 129, 0.05) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

/* 数据图表装饰 */
.data-chart-decoration {
  position: absolute;
  top: 15%;
  right: 8%;
  width: 80rpx;
  height: 120rpx;
  opacity: 0.08;
  z-index: 0;
}

.chart-bar {
  position: absolute;
  width: 8rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  bottom: 0;
  animation: chartAnimation 3s ease-in-out infinite;
}

.chart-bar:nth-child(1) { height: 30rpx; left: 0; animation-delay: 0s; }
.chart-bar:nth-child(2) { height: 50rpx; left: 12rpx; animation-delay: 0.3s; }
.chart-bar:nth-child(3) { height: 70rpx; left: 24rpx; animation-delay: 0.6s; }
.chart-bar:nth-child(4) { height: 40rpx; left: 36rpx; animation-delay: 0.9s; }
.chart-bar:nth-child(5) { height: 60rpx; left: 48rpx; animation-delay: 1.2s; }
.chart-bar:nth-child(6) { height: 35rpx; left: 60rpx; animation-delay: 1.5s; }

@keyframes chartAnimation {
  0%, 100% { transform: scaleY(1); opacity: 0.8; }
  50% { transform: scaleY(1.2); opacity: 1; }
}

/* 确保内容在装饰元素之上 */
.page-header,
.stats-overview,
.filter-section,
.history-section,
.progress-section {
  position: relative;
  z-index: 1;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 24rpx 0;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  letter-spacing: -0.5rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

/* 专业统计概览 */
.stats-overview {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  text-align: center;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
  opacity: 0.6;
}

.stat-item:nth-child(1)::before {
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light), var(--primary-color));
}

.stat-item:nth-child(2)::before {
  background: linear-gradient(90deg, var(--accent-color), var(--accent-light), var(--accent-color));
}

.stat-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-lg);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 专业筛选器 */
.filter-section {
  margin-bottom: 32rpx;
}

.filter-tabs {
  display: flex;
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  padding: 8rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
  position: relative;
  overflow: hidden;
}

.filter-tabs::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
  opacity: 0.5;
}

.filter-tab {
  flex: 1;
  padding: 16rpx 24rpx;
  text-align: center;
  border-radius: var(--border-radius);
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.filter-tab.active {
  background: var(--primary-color);
  color: white;
  box-shadow: var(--shadow-sm);
}

.filter-tab:active {
  transform: scale(0.95);
}

/* 专业历史列表 */
.history-section {
  margin-bottom: 32rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
  overflow: hidden;
  position: relative;
  transition: all 0.2s ease;
}

.history-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
  opacity: 0.6;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-lg);
}

/* 记录头部 */
.record-header {
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-title {
  flex: 1;
}

.song-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.record-date {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

.record-score {
  text-align: right;
}

.score-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--accent-color);
  line-height: 1;
}

.score-label {
  font-size: 20rpx;
  color: var(--text-tertiary);
  margin-left: 4rpx;
}

/* 详细指标 */
.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: var(--neutral-50);
}

.metric-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: var(--bg-primary);
  border-radius: var(--border-radius);
  border: 1rpx solid var(--border-color);
}

.metric-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.metric-value {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 记录底部 */
.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx 24rpx;
}

.record-meta {
  flex: 1;
}

.duration {
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.record-actions {
  display: flex;
  gap: 12rpx;
}

.action-control {
  background: var(--bg-primary);
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-md);
  width: 60rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-sm);
}

.action-control.danger {
  border-color: var(--error);
}

.action-control:active {
  transform: scale(0.95);
  box-shadow: var(--shadow);
}

.control-dots {
  font-size: 14rpx;
  color: var(--text-tertiary);
  font-weight: bold;
  letter-spacing: 1rpx;
}

.control-record {
  font-size: 10rpx;
  color: var(--accent-color);
  font-weight: bold;
}

.action-control.danger .control-record {
  color: var(--error);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
  color: var(--text-quaternary);
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.empty-action {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--border-radius-md);
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.empty-action:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

/* 进步趋势 */
.progress-section {
  margin-bottom: 32rpx;
}

.progress-card {
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
  overflow: hidden;
  position: relative;
}

.progress-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
  opacity: 0.6;
}

.progress-header {
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.progress-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.progress-subtitle {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 400;
}

.progress-chart {
  padding: 24rpx;
}

.chart-container {
  display: flex;
  align-items: end;
  justify-content: space-around;
  height: 120rpx;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
}

.chart-bar {
  width: 24rpx;
  background: linear-gradient(180deg, var(--primary-color), var(--primary-light));
  border-radius: 12rpx 12rpx 0 0;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.bar-value {
  position: absolute;
  top: -32rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  font-weight: 600;
  color: var(--text-primary);
  background: var(--bg-primary);
  padding: 4rpx 8rpx;
  border-radius: var(--border-radius);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.chart-labels {
  display: flex;
  justify-content: space-around;
  padding: 0 16rpx;
}

.chart-label {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

/* 分页 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
  gap: 16rpx;
}

.page-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--border-radius);
  border: 1rpx solid var(--border-color);
  background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(248, 250, 252, 0.9) 100%);
  color: var(--text-secondary);
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-sm);
  backdrop-filter: blur(10rpx);
}

.page-btn.active {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border-color: var(--primary-color);
  box-shadow: var(--shadow-md), 0 0 10rpx rgba(30, 58, 138, 0.3);
}

.page-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow);
}

.page-btn.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.page-btn.disabled:active {
  transform: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .history-container {
    padding: 16rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .metrics-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .metric-item {
    justify-content: space-between;
  }
  
  .chart-container {
    height: 100rpx;
  }
  
  .chart-bar {
    width: 20rpx;
  }
}