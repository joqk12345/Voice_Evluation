/* pages/history/history.wxss - 简洁温暖风格，与首页统一 */

.history-container {
  padding: 40rpx 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff9a56;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #e5e7eb;
}

/* 历史列表 */
.history-section {
  width: 100%;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.item-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.item-left {
  flex-shrink: 0;
}

.score-circle {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff9a56, #ffad56);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.3);
}

.score-number {
  font-size: 28rpx;
  font-weight: 700;
  color: white;
  line-height: 1;
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.song-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-date {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
  flex-shrink: 0;
}

.item-metrics {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.metric-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 4rpx 12rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.metric-label {
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 400;
}

.metric-value {
  font-size: 20rpx;
  color: #1f2937;
  font-weight: 600;
}

.item-actions {
  flex-shrink: 0;
  margin-left: 16rpx;
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-icon {
  font-size: 24rpx;
}

.play-btn {
  background: #f0f9ff;
}

.play-btn.playing {
  background: #dbeafe;
  animation: pulse 1.5s ease-in-out infinite;
}

.compare-btn {
  background: #fef3c7;
}

.compare-btn.selected {
  background: #fde68a;
  border: 2rpx solid #ff9a56;
}

.delete-btn {
  background: #fef2f2;
}

.delete-btn:active {
  transform: scale(0.9);
  background: #fee2e2;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 8rpx;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.empty-action {
  background: linear-gradient(135deg, #ff9a56, #ffad56);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
}

.empty-action:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

/* 变化趋势提示 */
.trend-tip {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.trend-tip-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.trend-tip-value {
  font-size: 24rpx;
  color: #ff9a56;
  font-weight: 600;
  padding: 4rpx 12rpx;
  background: #fff7ed;
  border-radius: 8rpx;
}

/* 对比弹窗 */
.comparison-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.comparison-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.comparison-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.comparison-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.comparison-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.comparison-close {
  font-size: 32rpx;
  color: #9ca3af;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f3f4f6;
}

.comparison-items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.comparison-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.comparison-date {
  font-size: 22rpx;
  color: #6b7280;
}

.comparison-score {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff9a56;
}

.comparison-vs {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 600;
  margin: 0 16rpx;
}

.comparison-diffs {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.diff-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.diff-label {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

.diff-value {
  font-size: 26rpx;
  font-weight: 600;
}

.diff-value.positive {
  color: #10b981;
}

.diff-value.negative {
  color: #ef4444;
}

.comparison-insights {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.insight-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.insight-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.insight-item {
  font-size: 24rpx;
  color: #6b7280;
  padding: 8rpx 16rpx;
  background: #f9fafb;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
}

/* 阻止事件冒泡 */
.stopPropagation {
  /* 用于阻止删除按钮的事件冒泡 */
}
