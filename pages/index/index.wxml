<!--pages/index/index.wxml - 情绪化设计，聚焦核心需求-->
<view class="container">
  <!-- 情绪化欢迎区 -->
  <view class="welcome-section">
    <view class="welcome-message">
      <text class="message-main">想知道自己唱得怎么样吗？</text>
      <text class="message-sub">每一次发声，都是进步的开始 ✨</text>
    </view>
  </view>

  <!-- 核心评测入口 - 大而突出 -->
  <view class="main-eval-card" bindtap="startEvaluation">
    <view class="eval-icon-wrapper">
      <text class="eval-icon">🎤</text>
    </view>
    <view class="eval-content">
      <text class="eval-title">开始评测</text>
      <text class="eval-desc">唱一首歌，听听你的声音</text>
    </view>
    <view class="eval-arrow">
      <text class="arrow-icon">→</text>
    </view>
  </view>

  <!-- 最近评测结果 - 如果有的话，给予鼓励 -->
  <view class="recent-result" wx:if="{{recentResult}}">
    <view class="result-header">
      <text class="result-label">上次评测</text>
    </view>
    <view class="result-card" bindtap="viewHistory">
      <view class="result-score">
        <text class="score-main">{{recentResult.score}}</text>
        <text class="score-unit">分</text>
      </view>
      <view class="result-info">
        <text class="result-song">{{recentResult.song}}</text>
        <text class="result-date">{{recentResult.date}}</text>
      </view>
      <view class="result-encourage">
        <text class="encourage-text">{{encourageMessage}}</text>
      </view>
    </view>
  </view>

  <!-- 如果没有评测记录，显示鼓励 -->
  <view class="empty-encourage" wx:if="{{!recentResult}}">
    <text class="encourage-emoji">🌟</text>
    <text class="encourage-title">开始你的第一次评测吧</text>
    <text class="encourage-desc">不用担心，每个人都是从第一次开始的</text>
  </view>
</view>