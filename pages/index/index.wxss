/* pages/index/index.wxss - 情绪化设计，温暖简洁 */

.container {
  padding: 40rpx 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding-bottom: 120rpx;
}

/* 情绪化欢迎区 */
.welcome-section {
  margin-bottom: 60rpx;
  text-align: center;
}

.welcome-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.message-main {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.message-sub {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.5;
}

/* 核心评测卡片 - 大而温暖 */
.main-eval-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
  position: relative;
  cursor: pointer;
}

.main-eval-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.eval-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff9a56, #ffad56);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
}

.eval-icon {
  font-size: 64rpx;
}

.eval-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.eval-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.eval-desc {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 400;
}

.eval-arrow {
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 300;
}

/* 最近评测结果 */
.recent-result {
  margin-bottom: 40rpx;
}

.result-header {
  margin-bottom: 16rpx;
}

.result-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 400;
}

.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-score {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.score-main {
  font-size: 56rpx;
  font-weight: 700;
  color: #ff9a56;
  line-height: 1;
}

.score-unit {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.result-song {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.result-date {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 400;
}

.result-encourage {
  margin-top: 8rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.encourage-text {
  font-size: 26rpx;
  color: #ff9a56;
  font-weight: 500;
  line-height: 1.5;
}

/* 空状态鼓励 */
.empty-encourage {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.encourage-emoji {
  font-size: 80rpx;
  margin-bottom: 8rpx;
}

.encourage-title {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.encourage-desc {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.6;
}
