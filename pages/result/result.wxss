/* pages/result/result.wxss - 沉浸式舞台风格，增强社交传播力 */

.result-container {
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(180deg, #6b46c1 0%, #9333ea 30%, #f97316 70%, #fbbf24 100%);
  padding-bottom: 120rpx;
  position: relative;
  overflow: hidden;
}

/* 舞台灯光背景 */
.stage-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
  overflow: hidden;
}

/* 光束效果 */
.light-beam {
  position: absolute;
  width: 400rpx;
  height: 100%;
  opacity: 0.15;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: lightMove 8s ease-in-out infinite;
}

.light-1 {
  left: 10%;
  animation-delay: 0s;
}

.light-2 {
  left: 50%;
  animation-delay: 2s;
  transform: translateX(-50%);
}

.light-3 {
  right: 10%;
  animation-delay: 4s;
}

@keyframes lightMove {
  0%, 100% {
    transform: translateX(0) rotate(5deg);
    opacity: 0.1;
  }
  50% {
    transform: translateX(20rpx) rotate(-5deg);
    opacity: 0.2;
  }
}

/* 音乐元素动画 */
.music-elements {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.music-note {
  position: absolute;
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.2);
  animation: floatNote 12s ease-in-out infinite;
}

.note-1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.note-2 {
  top: 35%;
  right: 15%;
  animation-delay: 3s;
}

.note-3 {
  top: 60%;
  left: 20%;
  animation-delay: 6s;
}

.note-4 {
  top: 80%;
  right: 10%;
  animation-delay: 9s;
}

@keyframes floatNote {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
    opacity: 0.2;
  }
  25% {
    transform: translateY(-30rpx) rotate(10deg);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-60rpx) rotate(-10deg);
    opacity: 0.25;
  }
  75% {
    transform: translateY(-30rpx) rotate(5deg);
    opacity: 0.3;
  }
}

/* 顶部标题区：今日声音报告 */
.title-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 60rpx 24rpx 40rpx;
