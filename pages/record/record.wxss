/* pages/record/record.wxss - 简洁温暖风格，与首页统一 */

.record-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding: 40rpx 24rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 情绪化提示 */
.welcome-tip {
  margin-bottom: 60rpx;
  text-align: center;
}

.tip-text {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.5;
}

/* 录音核心区域 */
.record-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 600rpx;
}

/* 录音按钮包装 */
.record-button-wrapper {
  margin-bottom: 40rpx;
  position: relative;
  overflow: visible;
}

/* 大录音按钮 - 可爱动漫风格 */
.record-button {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 50%, #ffb380 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 48rpx rgba(255, 154, 86, 0.35),
              0 0 0 8rpx rgba(255, 154, 86, 0.1),
              0 0 0 16rpx rgba(255, 154, 86, 0.05);
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  cursor: pointer;
  position: relative;
  overflow: visible;
}

.record-button:active {
  transform: scale(0.92);
  box-shadow: 0 8rpx 32rpx rgba(255, 154, 86, 0.4),
              0 0 0 4rpx rgba(255, 154, 86, 0.15);
}

.record-button.recording {
  background: linear-gradient(135deg, #ef4444 0%, #ff6b6b 50%, #ff8787 100%);
  animation: recordingPulse 1.2s ease-in-out infinite;
  box-shadow: 0 12rpx 48rpx rgba(239, 68, 68, 0.45),
              0 0 0 8rpx rgba(239, 68, 68, 0.2),
              0 0 0 16rpx rgba(239, 68, 68, 0.1);
}

@keyframes recordingPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

/* 背景光晕效果 */
.record-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(255, 154, 86, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: glowPulse 2s ease-in-out infinite;
  pointer-events: none;
}

@keyframes glowPulse {
  0%, 100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* 话筒图标包装 */
.record-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.record-icon {
  font-size: 96rpx;
  line-height: 1;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
  animation: micFloat 3s ease-in-out infinite;
  position: relative;
  z-index: 2;
}

@keyframes micFloat {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-8rpx) scale(1.05);
  }
}

.record-button.recording .record-icon {
  animation: micRecord 0.8s ease-in-out infinite;
}

@keyframes micRecord {
  0%, 100% {
    transform: translateY(0) scale(1) rotate(0deg);
  }
  25% {
    transform: translateY(-4rpx) scale(1.08) rotate(-3deg);
  }
  75% {
    transform: translateY(-4rpx) scale(1.08) rotate(3deg);
  }
}

/* 闪烁星星装饰 */
.icon-sparkles {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  font-size: 32rpx;
  opacity: 0;
  animation: sparkleFloat 2s ease-in-out infinite;
}

.sparkle-1 {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 15%;
  right: 15%;
  animation-delay: 0.6s;
}

.sparkle-3 {
  bottom: 20%;
  left: 50%;
  animation-delay: 1.2s;
}

@keyframes sparkleFloat {
  0%, 100% {
    opacity: 0;
    transform: scale(0.5) translate(0, 0);
  }
  50% {
    opacity: 1;
    transform: scale(1) translate(10rpx, -10rpx);
}
}

/* 录音时的波动球效果（根据反馈优化） */
.audio-ball-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.audio-ball {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  transition: transform 0.1s ease-out;
}

.audio-ball-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.6));
  box-shadow: 
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.8),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  animation: ballPulse 1s ease-in-out infinite;
}

@keyframes ballPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.audio-ball-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  animation: rippleExpand 1.5s ease-out infinite;
}

.ripple-1 {
  animation-delay: 0s;
}

.ripple-2 {
  animation-delay: 0.3s;
}

.ripple-3 {
  animation-delay: 0.6s;
}

@keyframes rippleExpand {
  0% {
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }
  100% {
    width: 250%;
    height: 250%;
    opacity: 0;
  }
}

.record-status-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 2;
}

/* 倒计时显示 */
.countdown-display {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(239, 68, 68, 0.15);
  min-width: 200rpx;
}

.countdown-number {
  display: inline-block;
  font-size: 80rpx;
  font-weight: 700;
  color: #ef4444;
  font-family: 'SF Mono', Monaco, monospace;
  line-height: 1;
  margin-right: 8rpx;
  animation: countdownPulse 1s ease-in-out infinite;
}

.countdown-label {
  font-size: 32rpx;
  color: #6b7280;
  font-weight: 500;
}

@keyframes countdownPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* 时间显示 */
.time-display {
  text-align: center;
  margin-bottom: 40rpx;
}

.time-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ff9a56;
  font-family: 'SF Mono', Monaco, monospace;
  margin-bottom: 8rpx;
}

.time-label {
  display: block;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
}

/* 简单设置 */
.simple-settings {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.setting-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
}

/* 高级设置按钮（Apple 风格） */
.advanced-settings-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 28rpx;
  margin-top: 16rpx;
  background: #ffffff;
  border: 0.5rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08),
              inset 0 0.5rpx 0 rgba(255, 255, 255, 0.8);
  cursor: pointer;
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.advanced-settings-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
}

.advanced-settings-btn:active {
  transform: scale(0.97);
  background: #f5f5f7;
  box-shadow: 0 0.5rpx 2rpx rgba(0, 0, 0, 0.06),
              inset 0 0.5rpx 1rpx rgba(0, 0, 0, 0.05);
}

.advanced-btn-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  letter-spacing: -0.3rpx;
  position: relative;
  z-index: 1;
}

.advanced-btn-icon {
  font-size: 20rpx;
  color: #86868b;
  transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  display: inline-block;
  position: relative;
  z-index: 1;
  font-weight: 300;
}

.advanced-btn-icon.expanded {
  transform: rotate(180deg);
}

/* 高级功能区域（折叠） */
.advanced-features {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, padding 0.3s ease;
  padding: 0;
}

.advanced-features.show {
  max-height: 300rpx;
  padding: 12rpx 0;
}

/* 功能按钮组 */
.feature-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  gap: 16rpx;
  padding: 0;
  margin-top: 0;
}

.feature-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 16rpx 12rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  min-height: 90rpx;
}

.feature-btn:active {
  transform: scale(0.95);
}

.feature-btn.active {
  background: linear-gradient(135deg, #fff7ed 0%, #ffe4cc 100%);
  border-color: #ff9a56;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.25);
}

.feature-icon {
  font-size: 32rpx;
  line-height: 1;
}

.feature-label {
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 500;
}

.feature-btn.active .feature-label {
  color: #ff9a56;
  font-weight: 600;
}

.setting-picker {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

.picker-text {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 波形可视化容器 */
.waveform-container {
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding: 32rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.waveform-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.waveform-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

.waveform-pitch {
  font-size: 22rpx;
  color: #4a90e2;
  font-weight: 600;
  background: rgba(74, 144, 226, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.waveform-canvas {
  width: 100%;
  height: 500rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

/* 完成提示 */
.completion-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
}

.hint-icon {
  font-size: 48rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 底部操作区域 */
.action-section {
  width: 100%;
  max-width: 600rpx;
  margin-top: auto;
  padding-top: 40rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff9a56, #ffad56);
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(255, 154, 86, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(255, 154, 86, 0.4);
}

.action-btn.secondary {
  background: white;
  color: #ef4444;
  border: 2rpx solid #ef4444;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.action-btn.secondary:active {
  transform: scale(0.98);
  background: #fef2f2;
}

.action-btn[disabled] {
  opacity: 0.6;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.loading-content {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  max-width: 400rpx;
  margin: 0 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f4f6;
  border-top: 4rpx solid #ff9a56;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  display: block;
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.loading-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
  }
