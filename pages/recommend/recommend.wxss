/* pages/recommend/recommend.wxss - 专业音频分析风格 */

.recommend-container {
  padding: 24rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

/* 专业等级卡片 */
.level-card {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  margin-bottom: 32rpx;
  border: 1rpx solid var(--primary-dark);
}

.level-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.level-title {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.25rpx;
}

.level-badge {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--border-radius);
  font-size: 20rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

.level-progress {
  margin-bottom: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 22rpx;
  opacity: 0.9;
  font-weight: 400;
}

.progress-percentage {
  font-size: 22rpx;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: white;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 专业推荐内容 */
.recommend-content {
  margin-bottom: 32rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.content-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.content-more {
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 专业练习推荐 */
.practice-section {
  margin-bottom: 32rpx;
}

.practice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.practice-item {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.practice-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow);
}

.practice-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.practice-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-color);
  border-radius: var(--border-radius);
  margin-right: 16rpx;
  font-size: 24rpx;
  color: white;
}

.practice-info {
  flex: 1;
}

.practice-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.practice-desc {
  font-size: 22rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

.practice-difficulty {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.difficulty-label {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.difficulty-stars {
  display: flex;
  gap: 4rpx;
}

.difficulty-star {
  font-size: 16rpx;
  color: var(--neutral-300);
}

.difficulty-star.active {
  color: var(--warning);
}

.practice-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.practice-btn {
  flex: 1;
  padding: 12rpx 20rpx;
  border-radius: var(--border-radius);
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.practice-btn.primary {
  background: var(--primary-color);
  color: white;
}

.practice-btn.primary:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

.practice-btn.secondary {
  background: var(--neutral-100);
  color: var(--text-secondary);
  border: 1rpx solid var(--border-color);
}

.practice-btn.secondary:active {
  background: var(--neutral-200);
  transform: scale(0.95);
}

/* 专业课程推荐 */
.course-section {
  margin-bottom: 32rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-item {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.course-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow);
}

.course-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--neutral-100);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.course-info {
  flex: 1;
}

.course-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.course-teacher {
  font-size: 22rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.rating-star {
  font-size: 16rpx;
  color: var(--warning);
}

.rating-text {
  font-size: 20rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.course-price {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--accent-color);
}

.course-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.course-actions {
  display: flex;
  gap: 12rpx;
}

.course-btn {
  flex: 1;
  padding: 12rpx 20rpx;
  border-radius: var(--border-radius);
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.course-btn.primary {
  background: var(--accent-color);
  color: white;
}

.course-btn.primary:active {
  background: var(--accent-dark);
  transform: scale(0.95);
}

.course-btn.secondary {
  background: var(--neutral-100);
  color: var(--text-secondary);
  border: 1rpx solid var(--border-color);
}

.course-btn.secondary:active {
  background: var(--neutral-200);
  transform: scale(0.95);
}

/* 专业一对一课程推广 */
.tutor-promotion {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border-radius: var(--border-radius-lg);
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: var(--shadow-lg);
  border: 1rpx solid var(--primary-dark);
}

.promotion-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.promotion-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.promotion-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

.promotion-features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.feature-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.feature-text {
  font-size: 20rpx;
  opacity: 0.9;
}

.promotion-cta {
  text-align: center;
}

.tutor-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: var(--border-radius-md);
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.tutor-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 专业技巧分享 */
.tips-section {
  margin-bottom: 32rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.tip-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow);
}

.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-color);
  border-radius: 50%;
  margin-right: 12rpx;
  font-size: 20rpx;
  color: white;
}

.tip-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.tip-content {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 专业空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
  color: var(--text-quaternary);
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.empty-action {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--border-radius-md);
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.empty-action:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .recommend-container {
    padding: 16rpx;
  }
  
  .promotion-features {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .feature-item {
    flex-direction: row;
    text-align: left;
  }
  
  .feature-icon {
    margin-right: 12rpx;
    margin-bottom: 0;
  }
}