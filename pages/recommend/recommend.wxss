/* pages/recommend/recommend.wxss - 温暖简洁，情绪化设计 */

.recommend-container {
  padding: 40rpx 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding-bottom: 120rpx;
}

/* 用户水平卡片 */
.level-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.level-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.level-emoji {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.level-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.level-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
}

.level-progress {
  margin-top: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f3f4f6;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9a56 0%, #ffad70 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 区块通用样式 */
.section-header {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.section-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 推荐歌曲 */
.songs-section {
  margin-bottom: 32rpx;
}

.songs-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.song-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.2s ease;
}

.song-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.song-cover {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cover-icon {
  font-size: 48rpx;
}

.song-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.song-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.song-artist {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.song-tags {
  display: flex;
  gap: 12rpx;
  margin-top: 4rpx;
}

.song-tag {
  padding: 4rpx 12rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 400;
}

.song-tag.difficulty-easy {
  background: #dcfce7;
  color: #16a34a;
}

.song-tag.difficulty-medium {
  background: #fef3c7;
  color: #d97706;
}

.song-tag.difficulty-hard {
  background: #fee2e2;
  color: #dc2626;
}

.song-arrow {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  font-size: 28rpx;
  color: #d1d5db;
}

/* 练习计划 */
.practice-section {
  margin-bottom: 32rpx;
}

.practice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.practice-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.practice-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.practice-icon {
  font-size: 40rpx;
}

.practice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.practice-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.practice-desc {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
}

.practice-meta {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.practice-duration,
.practice-frequency {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
}

.practice-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
  transition: all 0.2s ease;
}

.practice-btn::after {
  border: none;
}

.practice-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

/* 声乐技巧 */
.tips-section {
  margin-bottom: 32rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.2s ease;
}

.tip-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tip-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tip-icon {
  font-size: 40rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.tip-text {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.5;
}

.tip-arrow {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 每日挑战 */
.challenge-section {
  margin-bottom: 32rpx;
}

.challenge-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.challenge-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 20rpx;
}

.challenge-icon {
  font-size: 48rpx;
}

.challenge-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.challenge-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.challenge-desc {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.challenge-progress {
  margin-bottom: 24rpx;
}

.challenge-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
  transition: all 0.2s ease;
}

.challenge-btn::after {
  border: none;
}

.challenge-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* 一对一声乐课推荐 */
.tutor-section {
  margin-bottom: 32rpx;
}

.tutor-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.tutor-benefits {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.benefit-icon {
  font-size: 40rpx;
}

.benefit-text {
  font-size: 22rpx;
  color: #1f2937;
  font-weight: 500;
  text-align: center;
}

.tutor-pricing {
  margin-bottom: 24rpx;
}

.price-highlight {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.price-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff9a56;
}

.tutor-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ffad70 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
  transition: all 0.2s ease;
}

.tutor-btn::after {
  border: none;
}

.tutor-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .recommend-container {
    padding: 32rpx 20rpx;
  }
  
  .tutor-benefits {
    flex-direction: column;
    gap: 24rpx;
  }
  
  .benefit-item {
    flex-direction: row;
    justify-content: flex-start;
    width: 100%;
  }
  
  .benefit-icon {
    margin-right: 16rpx;
  }
}
