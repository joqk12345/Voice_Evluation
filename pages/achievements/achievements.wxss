/* 成就徽章页面样式 */
.achievements-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
  position: relative;
  padding-bottom: 120rpx;
}

/* 背景装饰 */
.achievements-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.decoration-star {
  position: absolute;
  font-size: 32rpx;
  opacity: 0.1;
  animation: twinkle 3s ease-in-out infinite;
}

.star-1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.star-2 {
  top: 25%;
  right: 15%;
  animation-delay: 0.5s;
}

.star-3 {
  top: 45%;
  left: 5%;
  animation-delay: 1s;
}

.star-4 {
  top: 65%;
  right: 10%;
  animation-delay: 1.5s;
}

.star-5 {
  top: 80%;
  left: 20%;
  animation-delay: 2s;
}

.decoration-line {
  position: absolute;
  background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
  opacity: 0.05;
}

.line-1 {
  width: 300rpx;
  height: 2rpx;
  top: 30%;
  left: 15%;
  transform: rotate(15deg);
}

.line-2 {
  width: 250rpx;
  height: 2rpx;
  top: 70%;
  right: 20%;
  transform: rotate(-15deg);
}

/* 页面头部 */
.achievements-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  position: relative;
  overflow: hidden;
}

.achievements-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, var(--accent-color), var(--primary-light), var(--accent-color));
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
}

.header-title {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--bg-primary);
}

.title-subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
}

.header-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-number {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--bg-primary);
}

.stat-label {
  font-size: 18rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.7);
}

/* 分类标签 */
.category-tabs {
  display: flex;
  padding: 24rpx;
  gap: 16rpx;
  background: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-color);
}

.tab-item {
  flex: 1;
  padding: 16rpx 24rpx;
  background: var(--bg-secondary);
  border-radius: var(--border-radius-md);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tab-item.active {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: var(--bg-primary);
  box-shadow: var(--shadow-sm);
}

.tab-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.tab-item:active::before {
  left: 100%;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
  position: relative;
  z-index: 2;
}

/* 成就徽章网格 */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 24rpx;
}

.achievement-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border: 2rpx solid var(--border-color);
}

.achievement-card.unlocked {
  border-color: var(--accent-color);
  box-shadow: var(--shadow-md), 0 0 20rpx rgba(16, 185, 129, 0.1);
}

.achievement-card.rare {
  border-color: #FFD700;
  box-shadow: var(--shadow-md), 0 0 20rpx rgba(255, 215, 0, 0.2);
}

.achievement-card:active {
  transform: scale(0.98);
}

.achievement-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.achievement-card.unlocked::before {
  opacity: 1;
}

/* 徽章容器 */
.badge-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.badge-icon.unlocked {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-light));
  box-shadow: 0 0 20rpx rgba(16, 185, 129, 0.3);
  animation: badgeGlow 2s ease-in-out infinite;
}

.badge-icon.locked {
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  filter: grayscale(100%);
  opacity: 0.6;
}

.badge-emoji {
  font-size: 36rpx;
  position: relative;
  z-index: 2;
}

.badge-glow {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, transparent 70%);
  animation: pulse 2s ease-in-out infinite;
}

.badge-level {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--bg-primary);
}

.level-text {
  font-size: 16rpx;
  font-weight: 700;
  color: var(--bg-primary);
}

/* 徽章信息 */
.badge-info {
  text-align: center;
  margin-bottom: 16rpx;
}

.badge-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.badge-desc {
  font-size: 20rpx;
  font-weight: 400;
  color: var(--text-secondary);
  line-height: 1.4;
  display: block;
  margin-bottom: 12rpx;
}

.badge-category {
  display: flex;
  justify-content: center;
}

.category-tag {
  font-size: 18rpx;
  font-weight: 500;
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-sm);
}

/* 进度条 */
.badge-progress {
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--bg-secondary);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-color), var(--accent-light));
  border-radius: 4rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

.progress-text {
  font-size: 18rpx;
  font-weight: 500;
  color: var(--text-secondary);
  text-align: center;
  display: block;
}

/* 解锁状态 */
.badge-status {
  text-align: center;
}

.status-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--accent-color);
  background: var(--accent-light);
  padding: 6rpx 16rpx;
  border-radius: var(--border-radius-sm);
  display: inline-block;
}

.status-text.locked {
  color: var(--text-secondary);
  background: var(--bg-secondary);
}

/* 稀有度标识 */
.rarity-indicator {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  padding: 4rpx 8rpx;
  border-radius: var(--border-radius-sm);
  box-shadow: 0 0 10rpx rgba(255, 215, 0, 0.3);
}

.rarity-text {
  font-size: 16rpx;
  font-weight: 700;
  color: var(--bg-primary);
}

/* 动画效果 */
@keyframes twinkle {
  0%, 100% {
    opacity: 0.1;
    transform: scale(1);
  }
  50% {
    opacity: 0.3;
    transform: scale(1.1);
  }
}

@keyframes badgeGlow {
  0%, 100% {
    box-shadow: 0 0 20rpx rgba(16, 185, 129, 0.3);
  }
  50% {
    box-shadow: 0 0 30rpx rgba(16, 185, 129, 0.5);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.1;
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .achievements-header {
    padding: 24rpx 16rpx;
  }
  
  .title-text {
    font-size: 32rpx;
  }
  
  .title-subtitle {
    font-size: 22rpx;
  }
  
  .header-stats {
    gap: 16rpx;
  }
  
  .stat-number {
    font-size: 24rpx;
  }
  
  .stat-label {
    font-size: 16rpx;
  }
  
  .category-tabs {
    padding: 16rpx;
    gap: 12rpx;
  }
  
  .tab-item {
    padding: 12rpx 16rpx;
  }
  
  .tab-text {
    font-size: 22rpx;
  }
  
  .achievements-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
    padding: 16rpx;
  }
  
  .achievement-card {
    padding: 20rpx;
  }
  
  .badge-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .badge-emoji {
    font-size: 32rpx;
  }
  
  .badge-name {
    font-size: 24rpx;
  }
  
  .badge-desc {
    font-size: 18rpx;
  }
  
  .category-tag {
    font-size: 16rpx;
  }
  
  .progress-text {
    font-size: 16rpx;
  }
  
  .status-text {
    font-size: 18rpx;
  }
  
  .rarity-text {
    font-size: 14rpx;
  }
}