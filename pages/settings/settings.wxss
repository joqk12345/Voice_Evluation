/* pages/settings/settings.wxss - 简洁温暖风格，与首页统一 */

.settings-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 40%);
  padding: 40rpx 24rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.settings-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 设置分组 */
.settings-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-left: 4rpx;
}

/* 设置列表 */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  transition: all 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #fef7ed;
  margin: 0 -16rpx;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
}

.setting-item.danger .setting-title {
  color: #dc2626;
}

.setting-item.danger .setting-desc {
  color: #f87171;
}

.setting-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe8d6 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.setting-icon {
  font-size: 36rpx;
  line-height: 1;
}

.setting-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.setting-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.setting-desc {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
  line-height: 1.4;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.value-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #ff9a56;
  min-width: 100rpx;
  text-align: right;
}

.setting-arrow {
  font-size: 28rpx;
  color: #d1d5db;
  flex-shrink: 0;
}

/* 开关样式 */
switch {
  transform: scale(0.85);
}

/* 底部信息 */
.settings-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 32rpx 0;
  margin-top: 24rpx;
}

.footer-text {
  font-size: 22rpx;
  font-weight: 400;
  color: #9ca3af;
}

/* 时间选择器弹窗 */
.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(4rpx);
}

.time-picker-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 520rpx;
  max-width: 90%;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #6b7280;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

.modal-body {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.time-picker {
  padding: 20rpx 40rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.2s ease;
}

.time-picker:active {
  border-color: #ff9a56;
  background: #fef7ed;
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.modal-btn.cancel {
  background: white;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
}

.modal-btn.cancel:active {
  background: #f9fafb;
  transform: scale(0.98);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #ff9a56, #ffad70);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
}

.modal-btn.confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .settings-container {
    padding: 32rpx 20rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .header-subtitle {
    font-size: 22rpx;
  }
  
  .settings-section {
    padding: 24rpx;
  }
  
  .section-title {
    font-size: 26rpx;
  }
  
  .setting-item {
    gap: 16rpx;
    padding: 20rpx 0;
  }
  
  .setting-icon-wrapper {
    width: 72rpx;
    height: 72rpx;
  }
  
  .setting-icon {
    font-size: 32rpx;
  }
  
  .setting-title {
    font-size: 26rpx;
  }
  
  .setting-desc {
    font-size: 22rpx;
  }
  
  .modal-content {
    width: 90%;
  }
}
