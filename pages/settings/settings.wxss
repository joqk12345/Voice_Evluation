/* 设置页面样式 */
.settings-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
  position: relative;
  padding-bottom: 40rpx;
}

/* 背景装饰 */
.settings-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.decoration-gear {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.05;
  animation: rotate 20s linear infinite;
}

.gear-1 {
  top: 10%;
  right: 10%;
  animation-delay: 0s;
}

.gear-2 {
  top: 30%;
  left: 5%;
  animation-delay: -7s;
}

.gear-3 {
  top: 60%;
  right: 15%;
  animation-delay: -14s;
}

.decoration-line {
  position: absolute;
  background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
  opacity: 0.03;
}

.line-1 {
  width: 300rpx;
  height: 2rpx;
  top: 20%;
  left: 10%;
  transform: rotate(15deg);
}

.line-2 {
  width: 250rpx;
  height: 2rpx;
  top: 70%;
  right: 15%;
  transform: rotate(-15deg);
}

/* 页面头部 */
.settings-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  position: relative;
  overflow: hidden;
}

.settings-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, var(--accent-color), var(--primary-light), var(--accent-color));
}

.header-content {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 2;
}

.header-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--bg-primary);
}

.title-subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
}

/* 设置分组 */
.settings-section {
  margin: 24rpx;
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  position: relative;
}

.settings-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
}

.section-header {
  padding: 32rpx 32rpx 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 设置列表 */
.settings-list {
  padding: 0 32rpx 32rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
  position: relative;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: var(--bg-secondary);
  border-radius: var(--border-radius-md);
  margin: 0 -16rpx;
  padding: 24rpx 16rpx;
}

.setting-item.danger {
  color: #EF4444;
}

.setting-item.danger .setting-title {
  color: #EF4444;
}

.setting-item.danger .setting-desc {
  color: #F87171;
}

.setting-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.setting-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: rotate(45deg);
  transition: all 0.6s ease;
}

.setting-item:active .setting-icon::before {
  transform: rotate(45deg) translate(100%, 100%);
}

.setting-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.setting-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.setting-desc {
  font-size: 22rpx;
  font-weight: 400;
  color: var(--text-secondary);
  line-height: 1.4;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.value-text {
  font-size: 22rpx;
  font-weight: 500;
  color: var(--text-primary);
  min-width: 80rpx;
  text-align: right;
}

.setting-arrow {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary);
  flex-shrink: 0;
}

/* 滑块样式 */
slider {
  width: 120rpx;
  height: 8rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 底部信息 */
.settings-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 32rpx;
  margin-top: 24rpx;
}

.footer-text {
  font-size: 20rpx;
  font-weight: 400;
  color: var(--text-secondary);
}

/* 时间选择器弹窗 */
.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.time-picker-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 500rpx;
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  position: relative;
  overflow: hidden;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--bg-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.modal-close:active {
  background: var(--primary-color);
  color: var(--bg-primary);
}

.modal-body {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.time-picker {
  padding: 20rpx 40rpx;
  background: var(--bg-secondary);
  border-radius: var(--border-radius-md);
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.time-picker:active {
  border-color: var(--primary-color);
  background: var(--primary-light);
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modal-btn.cancel {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 1rpx solid var(--border-color);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: var(--bg-primary);
  box-shadow: var(--shadow-md);
}

.modal-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.modal-btn:active::before {
  left: 100%;
}

/* 动画效果 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .settings-header {
    padding: 24rpx 16rpx;
  }
  
  .title-text {
    font-size: 32rpx;
  }
  
  .title-subtitle {
    font-size: 22rpx;
  }
  
  .settings-section {
    margin: 16rpx;
  }
  
  .section-header {
    padding: 24rpx 24rpx 0;
  }
  
  .section-title {
    font-size: 26rpx;
  }
  
  .settings-list {
    padding: 0 24rpx 24rpx;
  }
  
  .setting-item {
    gap: 16rpx;
    padding: 20rpx 0;
  }
  
  .setting-icon {
    width: 44rpx;
    height: 44rpx;
    font-size: 22rpx;
  }
  
  .setting-title {
    font-size: 24rpx;
  }
  
  .setting-desc {
    font-size: 20rpx;
  }
  
  .value-text {
    font-size: 20rpx;
  }
  
  .setting-arrow {
    font-size: 22rpx;
  }
  
  .settings-footer {
    padding: 24rpx;
  }
  
  .footer-text {
    font-size: 18rpx;
  }
  
  .modal-content {
    width: 90%;
    margin: 0 5%;
  }
  
  .modal-header {
    padding: 24rpx;
  }
  
  .modal-title {
    font-size: 26rpx;
  }
  
  .modal-close {
    width: 36rpx;
    height: 36rpx;
    font-size: 24rpx;
  }
  
  .modal-body {
    padding: 24rpx;
  }
  
  .time-picker {
    padding: 16rpx 32rpx;
  }
  
  .time-text {
    font-size: 28rpx;
  }
  
  .modal-actions {
    padding: 24rpx;
    gap: 12rpx;
  }
  
  .modal-btn {
    height: 72rpx;
    font-size: 24rpx;
  }
}

