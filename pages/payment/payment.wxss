/* pages/payment/payment.wxss */

.payment-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 服务信息 */
.service-info {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.service-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.service-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.service-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.service-features {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.feature-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 价格信息 */
.price-info {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.price-header {
  margin-bottom: 20rpx;
}

.price-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.price-detail {
  margin-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.price-item.discount {
  color: #ff4444;
}

.price-item.total {
  font-weight: bold;
  font-size: 32rpx;
  color: #008080;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 10rpx;
  padding-top: 20rpx;
}

.price-label {
  font-size: 26rpx;
  color: #333;
}

.price-value {
  font-size: 26rpx;
  font-weight: 600;
}

.price-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 10rpx 0;
}

/* 支付方式 */
.payment-methods {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.method-header {
  margin-bottom: 20rpx;
}

.method-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.method-list {
  margin-top: 20rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.method-item:last-child {
  border-bottom: none;
}

.method-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.method-radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  position: relative;
}

.method-radio.selected {
  border-color: #008080;
}

.method-radio.selected::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: #008080;
  border-radius: 50%;
}

/* 用户协议 */
.agreement {
  margin-bottom: 30rpx;
}

.agreement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.agreement-checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 15rpx;
  position: relative;
}

.agreement-checkbox.checked {
  background: #008080;
  border-color: #008080;
}

.agreement-checkbox.checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 24rpx;
  color: #666;
}

.agreement-link {
  font-size: 24rpx;
  color: #008080;
  text-decoration: underline;
}

/* 支付按钮 */
.payment-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
}

.pay-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.pay-btn.active {
  background: #008080;
  color: white;
}

.pay-btn.disabled {
  background: #ddd;
  color: #999;
}

.pay-btn:active {
  transform: scale(0.98);
}

.pay-text {
  font-size: 32rpx;
}

