<!--pages/payment/payment.wxml-->
<view class="payment-container">
  <!-- 服务信息 -->
  <view class="service-info">
    <view class="service-header">
      <text class="service-title">💎 专业深度评测</text>
      <text class="service-subtitle">AI+专家双重分析</text>
    </view>
    
    <view class="service-features">
      <view class="feature-item">
        <text class="feature-icon">🎵</text>
        <text class="feature-text">音域详细分析</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">🎯</text>
        <text class="feature-text">个性化技巧指导</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">📊</text>
        <text class="feature-text">完整改进方案</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">👨‍🏫</text>
        <text class="feature-text">专家点评</text>
      </view>
    </view>
  </view>

  <!-- 价格信息 -->
  <view class="price-info">
    <view class="price-header">
      <text class="price-title">服务价格</text>
    </view>
    <view class="price-detail">
      <view class="price-item">
        <text class="price-label">专业深度评测</text>
        <text class="price-value">¥59</text>
      </view>
      <view class="price-item discount">
        <text class="price-label">限时优惠</text>
        <text class="price-value">-¥30</text>
      </view>
      <view class="price-divider"></view>
      <view class="price-item total">
        <text class="price-label">实付金额</text>
        <text class="price-value">¥29</text>
      </view>
    </view>
  </view>

  <!-- 支付方式 -->
  <view class="payment-methods">
    <view class="method-header">
      <text class="method-title">支付方式</text>
    </view>
    <view class="method-list">
      <view class="method-item selected">
        <view class="method-icon">💚</view>
        <text class="method-name">微信支付</text>
        <view class="method-radio selected"></view>
      </view>
      <view class="method-tip">
        <text class="tip-text">小程序仅支持微信支付</text>
      </view>
    </view>
  </view>

  <!-- 用户协议 -->
  <view class="agreement">
    <view class="agreement-item" bindtap="toggleAgreement">
      <view class="agreement-checkbox {{agreed ? 'checked' : ''}}"></view>
      <text class="agreement-text">我已阅读并同意</text>
      <text class="agreement-link" bindtap="showUserAgreement">《用户协议》</text>
      <text class="agreement-text">和</text>
      <text class="agreement-link" bindtap="showPrivacyPolicy">《隐私政策》</text>
    </view>
  </view>

  <!-- 支付按钮 -->
  <view class="payment-footer">
    <button class="pay-btn {{agreed ? 'active' : 'disabled'}}" bindtap="confirmPayment" disabled="{{!agreed}}">
      <text class="pay-text">立即支付 ¥29</text>
    </button>
  </view>
</view>




