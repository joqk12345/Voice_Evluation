/* pages/login/login.wxss - 温暖简洁风格 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef7ed 0%, #ffffff 100%);
  position: relative;
}

.login-content {
  padding: 120rpx 40rpx 60rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
  position: relative;
  z-index: 2;
  animation: float 3s ease-in-out infinite;
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 154, 86, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 1;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px); 
  }
  50% { 
    transform: translateY(-20rpx); 
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.5;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.8;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.app-title {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 功能介绍 */
.features-section {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 80rpx;
  width: 100%;
  max-width: 600rpx;
}

.feature-card {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.2);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.feature-text {
  display: block;
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
  line-height: 1.4;
}

/* 登录区域 */
.login-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #ff9a56, #ffad56);
  border-radius: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.3);
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.4);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* 已登录用户信息 */
.user-info-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.user-avatar-wrapper {
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #ff9a56;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fef7ed;
  overflow: hidden;
}

.avatar-emoji {
  font-size: 64rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.profile-btn {
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fef7ed;
  color: #ff9a56;
  border: 2rpx solid #ff9a56;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.profile-btn::after {
  border: none;
}

.profile-btn:active {
  background: #fff5e6;
  transform: scale(0.98);
}

/* 隐私协议 */
.privacy-section {
  text-align: center;
  padding: 0 40rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.6;
}

.privacy-link {
  color: #ff9a56;
  text-decoration: underline;
}
