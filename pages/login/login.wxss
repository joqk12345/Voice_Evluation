/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary-color), #20B2AA);
  position: relative;
  overflow: hidden;
}

.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.bg-circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -150rpx;
  right: -150rpx;
}

.bg-circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 200rpx;
  left: -100rpx;
}

.bg-circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  right: 50rpx;
}

.login-content {
  position: relative;
  z-index: 10;
  padding: 100rpx 60rpx 60rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

.app-title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: var(--white);
  margin-bottom: 15rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 100rpx;
}

.feature-item {
  text-align: center;
  flex: 1;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-section {
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: var(--secondary-color);
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(218, 165, 32, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(218, 165, 32, 0.3);
}

.btn-content {
  display: flex;
  align-items: center;
  color: var(--white);
  font-size: 32rpx;
  font-weight: 600;
}

.btn-icon {
  margin-right: 15rpx;
  font-size: 36rpx;
}

.user-info {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid var(--secondary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--white);
}

.avatar-emoji {
  font-size: 60rpx;
  color: var(--text-light);
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--white);
  margin-bottom: 30rpx;
}

.privacy-section {
  text-align: center;
}

.privacy-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
}

.privacy-link {
  color: var(--secondary-color);
  text-decoration: underline;
}
