/* custom-tab-bar/index.wxss - 可爱动漫风格 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 56px;
  background: linear-gradient(180deg, #ffffff 0%, #fff9f0 100%);
  display: flex;
  z-index: 5000;
  box-shadow: 0 -2rpx 16rpx rgba(255, 154, 86, 0.1);
  border-top: 1rpx solid rgba(255, 154, 86, 0.1);
}

.tab-bar-border {
  display: none;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  transition: all 0.3s ease;
}

.tab-bar-item.active {
  transform: translateY(-4rpx);
}

.tab-bar-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-bar-icon {
  transform: scale(1.15);
  animation: bounce 0.5s ease;
}

.icon-text {
  font-size: 32px;
  line-height: 1;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  display: inline-block;
  transform-origin: center bottom;
}

.tab-bar-item.active .icon-text {
  filter: drop-shadow(0 6rpx 12rpx rgba(255, 154, 86, 0.4));
  animation: wiggle 0.6s ease;
}

@keyframes wiggle {
  0%, 100% {
    transform: rotate(0deg) scale(1.1);
  }
  25% {
    transform: rotate(-8deg) scale(1.15);
  }
  75% {
    transform: rotate(8deg) scale(1.15);
  }
}

.tab-bar-text {
  font-size: 20rpx;
  line-height: 1;
  margin-top: 8rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  letter-spacing: 0.5rpx;
}

.tab-bar-item.active .tab-bar-text {
  font-weight: 600;
  transform: scale(1.08);
}

/* 可爱动画效果 */
@keyframes bounce {
  0%, 100% {
    transform: scale(1.15) translateY(0);
  }
  50% {
    transform: scale(1.25) translateY(-4rpx);
  }
}

/* 选中状态的装饰效果 */
.tab-bar-item.active::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #ff9a56 0%, #ffad70 100%);
  border-radius: 0 0 4rpx 4rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

